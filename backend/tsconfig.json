{
    "extends": "../shared/tsconfig.json",

    "compilerOptions": {

        "baseUrl": "./",
        "outDir": "./dist",

        "module": "CommonJS",
        "lib": [
            "ESNext",
            "DOM"
        ],
        "typeRoots": [
            "node_modules/@types"
        ],

        "declaration": false,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "incremental": true,
        "sourceMap": true
    },

    "exclude": [
        "node_modules",
        "dist"
    ]
}
