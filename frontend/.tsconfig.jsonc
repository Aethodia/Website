{
    "extends": "../shared/.tsconfig.jsonc",

    "compilerOptions": {

        "baseUrl": "src",
        "outDir": "dist/tsc",

        "lib": [
            "ESNext",
            "DOM"
        ],
        "types": [
            "webpack-env"
        ]
    },

    "include": [
        "**/*.ts",
        "**/*.tsx",
        "**/*.js",
        "**/*.jsx"
    ],

    "angularCompilerOptions": {
        "fullTemplateTypeCheck": true,
        "strictInjectionParameters": true
    }
}
