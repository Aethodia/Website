{
    "extends": "../shared/tsconfig.json",

    "compilerOptions": {

        "baseUrl": "src",
        "outDir": "dist/tsc",

        "lib": [
            "ESNext",
            "DOM"
        ],
        "types": [
            "webpack-env"
        ]
    },

    "include": [
        "**/*.ts",
        "**/*.tsx",
        "**/*.js",
        "**/*.jsx"
    ],
    "exclude": [
        "node_modules/**",
        "dist/**"
    ],

    "angularCompilerOptions": {
        "fullTemplateTypeCheck": true,
        "strictInjectionParameters": true
    }
}
