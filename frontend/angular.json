{
    "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
    "version": 1,
    "defaultProject": "app",
    "newProjectRoot": "projects",

    "projects": {
        "app": {
            "prefix": "app",
            "projectType": "application",
            "root": ".",
            "sourceRoot": "./src",

            "schematics": {
                "@schematics/angular:component": {
                    "style": "scss"
                }
            },
            "architect": {

                "build": {
                    "builder": "@angular-devkit/build-angular:browser",
                    "options": {
                        "tsConfig": "tsconfig.app.json",
                        "outputPath": "dist",

                        "index": "src/index.html",
                        "main": "src/main.ts",
                        "polyfills": "src/polyfills.ts",
                        "scripts": [],
                        "styles": [
                            "src/styles.scss"
                        ],
                        "assets": [{
                            "input": "src/assets",
                            "output": "/",
                            "glob": "**/*",
                            "ignore": ["**/.*"]
                        }],

                        "aot": true,
                        "buildOptimizer": true,
                        "extractCss": true,
                        "extractLicenses": false,
                        "namedChunks": true,
                        "optimization": false,
                        "outputHashing": "none",
                        "sourceMap": true,
                        "vendorChunk": true
                    },

                    "configurations": {
                        "production": {
                            "fileReplacements": [{
                                "replace": "src/env/env.ts",
                                "with": "src/env/prod.env.ts"
                            }],
                            "budgets": [{
                                "type": "initial",
                                "maximumWarning": "2.5mb",
                                "maximumError": "5mb"
                            }, {
                                "type": "anyComponentStyle",
                                "maximumWarning": "5kb",
                                "maximumError": "10kb"
                            }],

                            "extractLicenses": true,
                            "namedChunks": false,
                            "optimization": true,
                            "sourceMap": false
                        }
                    }
                },

                "serve": {
                    "builder": "@angular-devkit/build-angular:dev-server",
                    "options": {
                        "browserTarget": "app:build"
                    },
                    "configurations": {
                        "production": {
                            "browserTarget": "app:build:production"
                        }
                    }
                },

                "extract-i18n": {
                    "builder": "@angular-devkit/build-angular:extract-i18n",
                    "options": {
                        "browserTarget": "app:build"
                    }
                },

                "lint": {
                    "builder": "@angular-eslint/builder:lint",
                    "options": {
                        "eslintConfig": ".eslintrc.js",
                        "tsConfig": [
                          "tsconfig.app.json"
                        ],
                        "exclude": [
                            "**/node_modules/**",
                            "**/dist/**"
                        ]
                    }
                }
            }
        }
    }
}
